[Unit]
Description=VodeneevBet Value Calculator Service
After=network.target

[Service]
Type=simple
User=vodeneevm
WorkingDirectory=REMOTE_DIR/internal/calculator
ExecStart=REMOTE_DIR/internal/calculator/calculator -config REMOTE_DIR/configs/local.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=vodeneevbet-calculator

# Environment variables
Environment="GOPATH=/home/vodeneevm/go"
Environment="PATH=/usr/local/go/bin:/home/vodeneevm/go/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

